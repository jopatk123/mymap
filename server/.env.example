# server/.env.example
# copy to server/.env and update values for production
PORT=3002
NODE_ENV=development
DB_PATH=./data/panorama_map.db
DATABASE_URL="file:./data/panorama_map.db"
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
JWT_SECRET=replace_this_with_strong_secret
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info
SESSION_SECRET=replace_this_with_session_secret
SESSION_NAME=mymap.sid
SESSION_MAX_AGE=1800000
PASSWORD_PEPPER=replace_this_with_global_pepper

# 高德地图服务 Key（后端代理使用）
# 请在部署环境或 server/.env 中设置 AMAP_KEY
AMAP_KEY=
